platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "Generated.xcconfig not found. Run 'flutter pub get' first."
  end
  File.read(generated_xcode_build_settings_path).match(/FLUTTER_ROOT\=(.*)/)[1].strip
end

require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper'))

# The "target 'Runner'" block is mandatory to fix the "abstract target" error
target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # Fix for "Unable to determine Swift version"
      config.build_settings['SWIFT_VERSION'] = '5.0'
      
      # Fix for "Minimum Deployment Target" warnings/errors
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      
      # Specific fix for Firebase/Google Sign-in issues often found in CI
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end